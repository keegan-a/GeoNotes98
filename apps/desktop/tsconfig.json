{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["svelte", "vitest/globals", "node", "@tauri-apps/api"]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.svelte",
    "src/**/*.ts",
    "src/**/*.js",
    "vite.config.ts",
    "playwright.config.ts"
  ]
}
