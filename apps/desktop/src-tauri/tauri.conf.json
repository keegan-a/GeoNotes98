{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GeoNotes 98",
  "version": "0.1.0",
  "identifier": "com.geonotes.desktop",
  "build": {
    "frontendDist": "../build",
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev -- --host",
    "devUrl": "http://127.0.0.1:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GeoNotes 98",
        "width": 1200,
        "height": 840,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob: filesystem:; media-src 'self' data: blob: filesystem:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "appimage", "deb", "rpm", "msi", "nsis"],
    "icon": [],
    "windows": {
      "wix": {
        "language": "en-US",
        "fragmentPaths": [],
        "template": null
      },
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "perMachine",
        "license": null,
        "arch": ["x86_64", "aarch64"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
